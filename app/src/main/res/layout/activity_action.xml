<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionActivity"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@drawable/background2"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/activity_action_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor"
            android:text="Joueur"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/activity_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:fontFamily="@font/actor"
            android:textColor="@color/black"
            android:textSize="25dp"></TextView>


        <info.hoang8f.widget.FButton
            android:id="@+id/activity_action_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="Ok"
            android:textColor="@android:color/white"
            app:fButtonColor="@color/green"
            fbutton:shadowEnabled="true" />





    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:id="@+id/activity_action_precision_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="?"
        android:textColor="@android:color/white"
        app:fButtonColor="@color/yellow"
        fbutton:shadowEnabled="true" />



</RelativeLayout>